pipeline {
  agent any

  stages {
    stage('Prepare') {
      steps {
        env.nvmVersion = readfile('.nvmrc')
        // checkout scm
        nvm(env.nvmVersion) {
          sh 'npm i'
        }
      }
    }

    stage('Lint') {
      steps {
        nvm(env.nvmVersion) {
          sh 'npm run prettier && npm run lint'
        }
      }
    }

    stage('Test') {
      steps {
        nvm(env.nvmVersion) {
          sh 'npm run test'
        }
      }
    }
  }
}
