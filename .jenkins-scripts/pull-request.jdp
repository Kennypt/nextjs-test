pipeline {
  agent any

  // tools {nodejs "node"}

  stages {
    stage('Prepare') {
      steps {
        // checkout scm
        nvm('12.0.0') {
          sh 'npm i'
        }
      }
    }

    stage('Lint') {
      steps {
        nvm('12.0.0') {
          sh 'npm run prettier && npm run lint'
        }
      }
    }

    stage('Test') {
      steps {
        nvm('12.0.0') {
          sh 'npm run test'
        }
      }
    }
  }
}
